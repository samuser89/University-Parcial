@model University.BL.DTOs.StudentDTO

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form action="/Students/Create" method="post">



    @Html.DisplayNameFor(m => m.ID)
    @Html.EditorFor(m => m.ID, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.ID, "", new { @class = "text-danger" })


    @Html.DisplayNameFor(m => m.LastName)
    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })



    @Html.DisplayNameFor(m => m.FirstMidName)
    @Html.EditorFor(m => m.FirstMidName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.FirstMidName, "", new { @class = "text-danger" })


    @Html.DisplayNameFor(m => m.EnrollmentDate)
    @Html.EditorFor(m => m.EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.EnrollmentDate, "", new { @class = "text-danger" })

    <input type="submit" value="Create" class="btn btn-primary" />

</form>
