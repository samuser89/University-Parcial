@model University.BL.DTOs.StudentDTO

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form action="/Students/Create" method="post">
    <h4>Student</h4>
    <hr />
    <div>

        <div class="col-4">
            @Html.DisplayNameFor(m => m.LastName)
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
        <div class="col-4">

            @Html.DisplayNameFor(m => m.FirstMidName)
            @Html.EditorFor(m => m.FirstMidName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.FirstMidName, "", new { @class = "text-danger" })
        </div>
        <div class="col-4">

            @Html.DisplayNameFor(m => m.EnrollmentDate)
            <input type="date" id="EnrollmentDate" name="EnrollmentDate" class="form-control">
            @Html.ValidationMessageFor(m => m.EnrollmentDate, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="col-4">
            <button class="btn btn-success"><span><i class="fas fa-plus-circle"> </i> <input type="submit" value="Create" class="btn btn-success" /></span></button>

            @Html.ActionLink("Back to List", "Index", null, new { @class = "link" })
        </div>

    </div>
</form>
