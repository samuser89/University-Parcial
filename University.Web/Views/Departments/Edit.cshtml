@model University.BL.DTOs.DepartmentDTO

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h4>Department</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form action="/Departments/Edit" method="post">
    <div class="col-4">
        @Html.HiddenFor(model => model.DepartmentID, htmlAttributes: new { @class = "control-label col-md-6" })

        @Html.EditorFor(model => model.DepartmentID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })

    </div>

    <div class="col-4">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-6" })

        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>


    <div class="col-4">
        @Html.DisplayNameFor(m => m.Budget)
        <input type="text" id="Budget" name="Budget" value="@Model.BudgetSTR" class="form-control">
        @*@Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })*@
        @Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
    </div>



    <div class="col-4">
        @Html.DisplayNameFor(m => m.StartDate)
        <input type="date" id="StartDate" name="StartDate" value="@Model.StartDateSTR" class="form-control">
        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
    </div>

    <div class="col-4">
        @Html.LabelFor(model => model.InstructorID, htmlAttributes: new { @class = "control-label col-md-6" })
        @Html.DropDownListFor(model => model.InstructorID, (SelectList)ViewData["Instructors"], new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InstructorID, "", new { @class = "text-danger" })
    </div>

    <br />
    <div class="col-4">
        <button class="btn btn-warning"><span><i class="fas fa-user-edit"> </i> <input type="submit" value="Edit" class="btn btn-warning" /></span></button>

        @Html.ActionLink("Back to List", "Index", null, new { @class = "link" })
    </div>
</form>
}


